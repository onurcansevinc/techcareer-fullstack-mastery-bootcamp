@model techcareer_fullstack_mastery_bootcamp.Models.Book

@{
    ViewData["Title"] = "Kitap Düzenle";
}

<h1 class="text-center mb-4">Kitap Düzenle</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImagePath" />
            
            <div class="form-group mb-3">
                <label asp-for="Title" class="control-label">Kitap Adı</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Author" class="control-label">Yazar</label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="PageCount" class="control-label">Sayfa Sayısı</label>
                <input asp-for="PageCount" class="form-control" type="number" />
                <span asp-validation-for="PageCount" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Genre" class="control-label">Tür</label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mb-2">
                        <img src="@Model.ImagePath" style="max-width: 200px;" class="img-thumbnail" />
                    </div>
                }
                <label class="control-label">Kitap Görseli</label>
                <input type="file" name="imageFile" class="form-control" accept="image/*" />
                <small class="text-muted">Yeni görsel yüklemezseniz mevcut görsel korunacaktır.</small>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Listeye Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
